<configuration>

  <property name="pattern" value="%-5level %logger{35} - %msg%n" />

	<appender name="cloud-watch" class="io.github.dibog.AwsLogAppender">

		<awsConfig>

			<region>eu-west-1</region>

			<clientConfig class="com.amazonaws.ClientConfiguration">
				<proxyHost></proxyHost>
				<proxyPort></proxyPort>
			</clientConfig>
		</awsConfig>

		<createLogGroup>true</createLogGroup>
		<queueLength>100</queueLength>
		<groupName>authority-registry-dynamo-test</groupName>
		<streamName>log-stream</streamName>  
		<dateFormat>yyyyMMdd_HHmm</dateFormat>

		<layout>
			<!-- <pattern>%-5level %logger{35} -	%msg %n</pattern> -->
			<pattern>${pattern}</pattern>
		</layout>

	</appender>

  <logger name="org.apache.http" level="ERROR" />
  <logger name="software.amazon" level="ERROR" />
  <logger name="com.amazonaws" level="ERROR" />
  <logger name="org.gradle" level="ERROR" />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>



	<root level="DEBUG">
	  <appender-ref ref="CONSOLE"/>
		<appender-ref ref="cloud-watch" />
	</root>

</configuration>