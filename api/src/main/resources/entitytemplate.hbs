<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>{{label}}</title>
</head>
<body>
<h2>{{label}} - ({{id}})</h2>
<ul>
    {{#each body as |value key|}}<li data-automation-id="{{key}}"> {{key}} -&nbsp;
        {{~#if value.@language}}
            {{~#each @value as |output|}}{{~output}};{{/each}}
        {{~else}}
            {{~#if value.[0]}}
                {{~#each value as |element|}}
                    {{~#if element.@language}}
                        {{~#each element as |output|}}{{~output}};{{/each}}
                    {{~else}}
                        {{~element}};
                    {{~/if}}
                {{~/each}}
            {{~else}}
                {{~value}}
            {{~/if}}
        {{~/if}}</li>
    {{/each}}
</ul>
</body>
</html>