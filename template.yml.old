Resources:
  GetHelloWorld:
    Type: AWS::Serverless::Function
    Properties:
      Handler:  no.bibsys.SampleHandler::handleRequest
      Runtime: java8
      CodeUri: hello/target/hello-1.0-SNAPSHOT.jar
      Policies: AWSLambdaBasicExecutionRole
      Timeout: 180
#      Role:
#        Fn::ImportValue:
#          !Join ['-', [!Ref 'ProjectId', !Ref 'AWS::Region', 'LambdaTrustRole']]
      Events:
        GetEvent:
          Type: Api
          Properties:
            Path: /{proxy+}
            Method: any
Outputs:
  GetHelloWorldAPI:
    Description: URL for application
    Value: !Sub 'https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/pets'
    Export:
      Name: GetHelloWorldAPI


