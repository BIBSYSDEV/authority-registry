{
  "Version"  : "2012-10-17",
  "Statement": [
    {
      "Action"  : [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "dynamodb:CreateTable",
        "dynamodb:DeleteTable",
        "dynamodb:DescribeTable",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:DeleteItem",
        "s3:*",
        "apigateway:GET"
      ],
      "Resource": "*",
      "Effect"  : "Allow"
    },
    {
      "Action"  : [
        "secretsmanager:GetSecretValue",
        "ssm:GetParameter"
      ],
      "Resource": "*",
      "Effect"  : "Allow"
    },
    //The rest of the policies are for all lambda functions
    {
      "Action"  : [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*",
      "Effect"  : "Allow"
    },
    {
      "Effect"  : "Allow",
      "Action"  : [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::*/AWSLogs/*/Config/*"
    },
    {
      "Effect"  : "Allow",
      "Action"  : [
        "config:Put*",
        "config:Get*",
        "config:List*",
        "config:Describe*"
      ],
      "Resource": "*"
    }
  ]
}
